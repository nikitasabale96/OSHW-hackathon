     <div class="flex items-center gap-3">
  {socials.map((s) => (
    <a
      href={s.href}
      aria-label={s.label}
      class={`h-9 w-9 rounded-full text-white grid place-items-center transition hover:opacity-90 ${s.class}`}
      target="_blank"
      rel="noreferrer"
