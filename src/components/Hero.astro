</style>

 
<script>
  const parts = [
    { id: "part1", text: "Open Source Hardware" },
    { id: "part2", text: "Hackathon " },
    { id: "part3", text: "2026" }
  ];

  const speed = 95;
  let partIndex = 0;
  let charIndex = 0;

  function typeSegments() {
    if (partIndex >= parts.length) return;

    const el = document.getElementById(parts[partIndex].id);

    if (charIndex < parts[partIndex].text.length) {
      el.textContent += parts[partIndex].text.charAt(charIndex);
      charIndex++;
      setTimeout(typeSegments, speed);
    } else {
      partIndex++;
      charIndex = 0;
      setTimeout(typeSegments, 200);
    }
  }

  window.addEventListener("load", () => {
    if (!window.matchMedia("(prefers-reduced-motion: reduce)").matches) {
      typeSegments();
    } else {
      parts.forEach(p => {
        document.getElementById(p.id).textContent = p.text;
      });
    }
  });
</script>
