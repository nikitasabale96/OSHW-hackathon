---
import Layout from "../layouts/Layout.astro";
---


<Layout>
    <main class="min-h-screen bg-slate-50">
        <section class="border-b border-slate-200 bg-white">
            <div class="mx-auto max-w-5xl px-6 py-12">
                <h1 class="text-3xl font-semibold text-slate-900">Temporary Test Page</h1>
                <p class="mt-3 text-slate-600">
                    This is a dummy page for layout and navbar testing.
                </p>
            </div>
        </section>

        <section class="mx-auto max-w-5xl px-6 py-10">
            <div class="grid gap-6 md:grid-cols-3">
                <article class="rounded-2xl bg-white p-6 shadow-sm ring-1 ring-slate-200">
                    <h2 class="text-lg font-semibold text-slate-900">Card One</h2>
                    <p class="mt-2 text-sm text-slate-600">
                        Placeholder copy for a simple content block.
                    </p>
                </article>
                <article class="rounded-2xl bg-white p-6 shadow-sm ring-1 ring-slate-200">
                    <h2 class="text-lg font-semibold text-slate-900">Card Two</h2>
                    <p class="mt-2 text-sm text-slate-600">
                        Another block to test spacing and alignment.
                    </p>
                </article>
                <article class="rounded-2xl bg-white p-6 shadow-sm ring-1 ring-slate-200">
                    <h2 class="text-lg font-semibold text-slate-900">Card Three</h2>
                    <p class="mt-2 text-sm text-slate-600">
                        Use this page to verify mobile styles.
                    </p>
                </article>
            </div>
        </section>

        <section class="mx-auto max-w-5xl px-6 pb-16">
            <div class="rounded-3xl bg-slate-900 p-8 text-white">
                <h2 class="text-2xl font-semibold">CTA Section</h2>
                <p class="mt-3 text-white/80">
                    Replace this content when the real page is ready.
                </p>
                <button class="mt-6 rounded-md bg-orange-500 px-5 py-2 text-sm font-semibold hover:bg-orange-600 transition">
                    Test Button
                </button>
            </div>
        </section>
    </main>
</Layout>
